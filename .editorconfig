root = true

[*]
tab_width = 4
indent_size = 4
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# matching what pnpm/npm/yarn will format package.json
[package.json]
tab_width = 2
indent_size = 2
indent_style = space

[*{WORKSPACE,BUILD,.bazel,.bzl}]
tab_width = 4
indent_size = 4
indent_style = space

[*{yml,yaml}]
tab_width = 2
indent_size = 2
indent_style = space
